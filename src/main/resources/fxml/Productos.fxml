<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="700.0" prefWidth="950.0" style="-fx-background-color: #DDDDDD;" stylesheets="@../styles/tableStyles.css" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.sistema.ui.ProductosController">
   <children>
      <Label layoutX="40.0" layoutY="45.0" text="Administración de Productos ">
         <font>
            <Font name="Corbel Bold" size="30.0" />
         </font>
      </Label>
      <Button fx:id="btnAgregarProducto" layoutX="406.0" layoutY="123.0" mnemonicParsing="false" onAction="#agregarProductoEvent" prefHeight="36.0" prefWidth="206.0" style="-fx-background-color: #5882E8; -fx-border-radius: 20; -fx-background-radius: 20;" text="+ Agregar Producto" textFill="WHITE" wrapText="true">
         <font>
            <Font name="Corbel Bold" size="18.0" />
         </font>
      </Button>
      <TextField fx:id="buscarProducto" layoutX="45.0" layoutY="123.0" onAction="#buscarNombreProducto" prefHeight="36.0" prefWidth="351.0" promptText="🔍 Buscar Productos" style="-fx-background-radius: 15; -fx-border-radius: 15;">
         <font>
            <Font name="Corbel Bold" size="18.0" />
         </font>
      </TextField>
      <TableView fx:id="tablaProductos" layoutX="45.0" layoutY="188.0" prefHeight="455.0" prefWidth="861.0">
        <columns>
          <TableColumn fx:id="codigoProducto" editable="false" prefWidth="104.0" text="Código" />
          <TableColumn fx:id="nombreProducto" editable="false" prefWidth="303.0" text="Producto" />
            <TableColumn fx:id="precioProducto" editable="false" minWidth="0.0" prefWidth="132.0" text="Precio" />
            <TableColumn fx:id="stockDisponible" editable="false" prefWidth="100.0" text="Unidades" />
            <TableColumn fx:id="accionesProducto" editable="false" prefWidth="214.0" sortable="false" text="Acciones" />
        </columns>
      </TableView>
      <Button fx:id="btnAExistenciasProducto" layoutX="627.0" layoutY="123.0" mnemonicParsing="false" onAction="#agregarExistenciasAction" prefHeight="36.0" prefWidth="279.0" style="-fx-background-color: #5882E8; -fx-border-radius: 20; -fx-background-radius: 20;" text="+ Agregar Existencias Producto" textFill="WHITE" wrapText="true">
         <font>
            <Font name="Corbel Bold" size="18.0" />
         </font>
      </Button>
   </children>
</AnchorPane>
